.slider
  display: flex;
  flex-wrap wrap
  justify-content space-between
  margin: 0 -10px

  &__input
    width: 50%
    display: flex;
    align-items center
    padding: 0 10px

    input
      padding: 14px 0px 17px
      text-align: center;
      font-size: 14px
      +media('lg')
        padding: 5px 0 6px

  &__label
    font-size: 8px
    font-weight: 500
    letter-spacing .3em
    margin: 0 12px 0 2px

  &__ui
    width: 100%
    height: 17px
    border: 0
    background-color: transparent;
    box-shadow none
    margin: 0 18px 24px
    +media('lg')
      margin-bottom: 20px

    .noUi-connects
      height: 1px
      background: #e8e7e6
      transform translateY(7px)

    .noUi-connect
      height: 1px
      background: #ba9674

    .noUi-handle
      width: 17px
      height: 17px
      border: 2px solid $brown2
      box-shadow none
      border-radius: 0
      top: 0
      right: -8px
      outline 0

      &:before
        display: none;

      &:after
        width: 7px
        height: 7px
        background: $brown2
        left: 3px;
        top: 3px;

    .noUi-marker
      display: none;

    .noUi-value, .noUi-tooltip
      font-size: 24px
      font-family: 'DIN Pro Cond', sans-serif;
      line-height: 1
      font-weight: bold
      color: #380800

    .noUi-tooltip
      bottom: auto
      top: 120%

