.card
  position: relative;
  display: block;
  overflow: hidden;
  color: $white
  background: $black

  &__image
    position: relative;
    padding-bottom: 74%
    background: $black 50%
    background-size: cover
    //opacity: 1
    visibility: visible;
    cursor: pointer;
    anim()

    &:after
      content: ''
      position: absolute;
      left: 0
      top: 0
      width: 100%
      height: 100%
      background: linear-gradient(to top, #2b1f1f, rgba(#2b1f1f, .25));
      opacity: 0
      anim(.35s)
      +media('md')
        opacity: 1

  &__content
    position: absolute
    top: 0
    left: 0
    z-index: 1
    width: 100%
    height: 100%
    +media('md')
      background: $white
      position: relative;
      display: flex;
      height: auto;
      padding: 19px 20px 45px
      max-width 480px
      margin: 0 auto

  &__label,
  &__title,
  &__params,
  &__price,
  &__btn
    opacity: 0
    transform translateY(15px)
    transition all .15s ease-out
    z-index: 1
    +media('md')
      opacity: 1
      transform none

  &__label
    position: absolute;
    font-size: 21px
    line-height: 1
    font-weight: 500
    padding: 4px 13px 5px 20px
    background: $brown2
    top: 40px
    left: 32px
    +media('md')
      top: auto;
      bottom: 100%
      margin-bottom: 20px;
      right: 20px;
      left: auto;
      font-size: 16px
      padding: 4px 9px 4px 9px

    &:after
      content ''
      position: absolute;
      border-left: 6px solid $brown2
      border-top: 6px solid transparent
      border-bottom: 6px solid transparent
      left: 100%
      top: 50%
      margin-top: -6px

  &__title
    position: absolute;
    bottom: 51%
    left: 36px;
    right: 40px
    font-size: 27px
    line-height: 1.3
    font-weight: bold;
    overflow: hidden;
    display: block;
    display: -webkit-box;
    max-height: calc(2em * 1.3)
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    transition-delay .05s
    +media('md')
      bottom: 100%
      margin-bottom: 20px
      font-size: 20px
      left: 19px
      right: 100px

  &__params
    position: absolute;
    display: flex;
    flex-wrap wrap
    top: 53%
    left: 39px;
    max-width 400px
    transition-delay .1s
    +media('md')
      flex-direction column
      position: static;
      color: $black

  &__param
    margin-right: 29px
    margin-top: 10px
    white-space nowrap
    +media('md')
      margin-top: 0
      margin-bottom: 8px
      &:last-child
        margin-bottom: 0

    svg
      fill $brown1
      width: 24px
      height: 24px
      margin-right: 15px
      vertical-align: middle;
      margin-top: -4px
      +media('md')
        width: 18px
        height: 18px
        margin-right: 12px

  &__footer
    +media('md')
      text-align: right;
      margin-left: auto;

  &__price
    font-size: 18px
    position: absolute;
    bottom: 13%
    left: 39px
    transition-delay .15s
    +media('md')
      position: static;
      color: $black
      font-size: 16px
      line-height: 1
      margin-top: 3px
      margin-bottom: 20px

  &__btn
    display: inline-block;
    font-size: 12px
    font-weight: bold;
    letter-spacing 0
    background: $white
    color: $brown1
    position: absolute;
    bottom: 10%
    right: 39px
    padding: 15px 28px 15px
    transition-delay .2s
    border: 0

    &:hover
      color: $brown2
      background: $white

    &:active
      color: rgba($brown2, .8)
      background: $white

    +media('md')
      position: static;
      font-size: 10px
      background: $brown1
      color: $white
      padding: 11px 23px
      &:hover
        background: $brown2
        color: $white

      &:active
        background: #a18475

  &__link
    position: absolute;
    top: 0
    left: 0
    width: 100%
    height: 100%
    z-index: 1
    border: 0
    +media('md')
      position: static;

  &:hover
    & ^[0]__image:after
      opacity: 1

    & ^[0]__label,
    & ^[0]__title,
    & ^[0]__params,
    & ^[0]__price,
    & ^[0]__btn
      transform none
      opacity: 1
