.tabs
  &__content
    position: relative;

  &__headers
    display: flex;
    flex-wrap wrap
    margin-bottom: 48px

    flex-wrap wrap
      flex-direction column
      margin-bottom: 15px

    &--line
      +media('md')
        flex-direction row
        & ^[0]__header
          padding-left: 12px
          padding-right: 12px
          margin: 5px
          flex-grow 1

        //&:after
        //  content: ''
        //  width: 5px

  &__header
    font-size: 10px
    line-height: 1
    font-weight: 500
    letter-spacing .3em
    border: 2px solid #f6f3f1
    padding: 22px 28px
    margin-right: 10px
    margin-bottom: 10px
    anim()
    +media('md')
      font-size: 8px
      margin: 0 0 10px
      padding: 14px 29px 14px

    svg
      display: inline-block;
      vertical-align: middle;
      width: 32px
      height: 32px
      margin-right: 15px
      anim()
      +media('md')
        width: 22px
        height: 22px

    &:last-child
      margin-right: 0

    &:hover
      color: $brown2

    &--active
      color: $black
      border-color: $brown2

  &__body
    position: absolute;
    left: 0
    top: 0
    width: 100%
    opacity: 0
    pointer-events none
    z-index: -1
    anim(.2s)

    &--active
      position: static;
      opacity: 1
      pointer-events all

  &--filled
    & ^[0]__header
      background: $grey2
      border: 0
      font-size: 15px
      letter-spacing 0.025em
      font-weight: 600
      padding: 14px 26px 12px
      +media('md')
        font-size: 12px
        padding: 10px 26px 8px

      svg
        fill: $brown2

      &--active
        background: $brown2
        color: $white

        svg
          fill: $white


