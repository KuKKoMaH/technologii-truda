.btnArrow
  position: relative;
  border-radius: 5px
  font-family: 'DIN Pro Cond', sans-serif;
  font-size: 18px
  line-height: 1
  color: #ffffff
  width: 251px
  height: 76px
  display: flex;
  align-items center
  justify-content center
  padding-right: 60px
  border: 0
  //background: #ea7722
  anim()
  overflow: hidden;

  &:before, &:after
    content: ''
    position: absolute;
    z-index: -1
    anim()

  &:before
    top: 0
    bottom: 0
    right: 60px
    left: 0
    background: #ea7722
    border: 1px solid #ea7722
    border-radius: 5px 0 0 5px

  &:after
    content: ''
    position: absolute;
    right: 0px
    top: 0px
    width: 60px
    bottom: 0px
    background: linear-gradient(to right, #d36b1f, #e67521);
    border-radius: 0 5px 5px 0
    z-index: -1
    anim()

  span
    max-height 56px
    overflow: hidden;

    &:after
      content: ''
      position: absolute;
      right: 0px
      top: 0px
      width: 60px
      bottom: 0px
      background: #ffffff
      border: 1px solid #ea7722
      border-left: 0
      border-radius: 0 5px 5px 0
      z-index: -1
      anim()

  svg
    position: absolute;
    right: 22px
    top: 50%
    transform translateY(-50%)
    fill: #ffffff
    width: 17px
    height: 16px
    anim()

  input
    position: absolute;
    right: 0
    bottom: 0
    width: 200%
    height: 100%
    opacity: 0
    cursor: pointer;

  &:hover
    color: #262626

    &:before
      background-color: #fff;

    &:after
      opacity: 0

    svg
      fill: #d36b1f

  &:active
    color: #ffffff
    box-shadow inset 0 10px 18px 0 rgba(#383838, .23)
    border-color: #c56a27;

    &:before
      background-color: #ea7722

    &:after
      opacity: 1

    svg
      fill: #fff

  &--line
    height: 61px
    width: auto;
    padding: 0 93px 0 26px

  &--block
    width: 100%

  &--outline
    color: #222222

    &:before
      background: #ffffff

    &:after
      opacity: 0

    svg
      fill: #d36b1f


